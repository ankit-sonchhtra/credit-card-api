                    }
                },
                "errorCode": {
                    "type": "string",
                    "example": "ERR_CC_USER_ALREADY_EXIST"
                },
                "errorMessage": {
                    "type": "string",
                    "example": "user already exist with requested mobile number"
                }
            }
        },
        "models.CreateAccountRequest": {
            "type": "object",
